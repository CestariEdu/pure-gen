{
  "opts": {
    "destination": "./doc/"
  },
  "source": {
    "include": [
      "lib",
      "lib/image_providers"
    ],
    "exclude": [
      "lib/locales"
    ]
  },
  "templates": {
    "systemName": "pure-gen",
    "linenums": true,
    "inverseNav": true,
    "syntaxTheme": "dark",
