{
  "name": "pure-gen",
  "description": "Generate fake data to be used in test automation",
  "version": "0.0.1",
  "contributors": [
    "Armindo Junior <armindo.junior05@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "lint": "npx eslint ./lib",
    "test": "npx mocha test/*.*.js",
    "doc": "npx jsdoc -c conf.json -t ./node_modules/ink-docstrap/template --readme ./README.md",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "all": false,
    "include": [
      "lib/**/*.js",
      "vendor/*.js"
    ],
    "exclude": [
      "coverage",
      "locales",
      "modules",
      "white",
      "docs",
      "docker",
      "public",
      "reports",
      "tests",
      "node_modules"
    ],
    "reporter": [
      "html",
      "lcov",
      "clover"
    ],
    "report-dir": "./reports/coverage"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "ink-docstrap": "1.3.2",
    "jsdoc": "^3.6.3",
    "lodash": "^4.17.15",
    "mocha": "^7.1.1",
    "optimist": "0.6.1",
    "sinon": "^9.0.1",
    "slugify": "^1.4.0"
  },
  "dependencies": {},
  "license": "MIT",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-commit": "",
      "pre-push": ""
    }
  }
}
